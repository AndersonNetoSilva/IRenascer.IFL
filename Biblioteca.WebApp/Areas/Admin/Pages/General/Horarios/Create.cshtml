@page
@model IFL.WebApp.Areas.Admin.Pages.General.Horarios.CreateModel

@{
    ViewData["Title"] = "Inserir";
}

<breadcrumb items="Cadastros, Gerais, Horarios, Inserir"></breadcrumb>

<div class="row">
    <div class="col-md-10">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="Horario.Nome" class="control-label"></label>
                        <input asp-for="Horario.Nome" class="form-control" />
                        <span asp-validation-for="Horario.Nome" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-2">
                    <label>Início</label>
                    <input asp-for="Horario.HoraInicio" type="time" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label>Fim</label>
                    <input asp-for="Horario.HoraFim" type="time" class="form-control" />
                </div>
            </div>
 

            <div class="col-md-9">
                <div class="form-group">
                    <label asp-for="Horario.Descricao" class="control-label"></label>
                    <textarea asp-for="Horario.Descricao"
                              class="form-control"
                              rows="4"></textarea>
                    <span asp-validation-for="Horario.Descricao" class="text-danger"></span>
                </div>
            </div>


            <hr />

            <h6>Dias da Semana</h6>

            <div class="row mb-7">
                @* <div class="col-md-2 form-check">
                    <input asp-for="Horario.Domingo" class="form-check-input" />
                    <label asp-for="Horario.Domingo" class="form-check-label"></label>
                </div> *@

                <div class="col-md-2 form-check">
                    <input asp-for="Horario.Segunda" class="form-check-input" />
                    <label asp-for="Horario.Segunda" class="form-check-label"></label>
                </div>

                <div class="col-md-2 form-check">
                    <input asp-for="Horario.Terca" class="form-check-input" />
                    <label asp-for="Horario.Terca" class="form-check-label"></label>
                </div>

                <div class="col-md-2 form-check">
                    <input asp-for="Horario.Quarta" class="form-check-input" />
                    <label asp-for="Horario.Quarta" class="form-check-label"></label>
                </div>

                <div class="col-md-2 form-check">
                    <input asp-for="Horario.Quinta" class="form-check-input" />
                    <label asp-for="Horario.Quinta" class="form-check-label"></label>
                </div>

                <div class="col-md-2 form-check">
                    <input asp-for="Horario.Sexta" class="form-check-input" />
                    <label asp-for="Horario.Sexta" class="form-check-label"></label>
                </div>

                <div class="col-md-1 form-check mt-2">
                    <input asp-for="Horario.Sabado" class="form-check-input" />
                    <label asp-for="Horario.Sabado" class="form-check-label"></label>
                </div>
            </div>

            <hr />

 

            <div class="col-md-3">
                <div class="form-group form-check">
                    <input asp-for="Horario.Ativo" class="form-check-input" />
                    <label asp-for="Horario.Ativo" class="form-check-label"></label>
                    <span asp-validation-for="Horario.Ativo" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-3 d-flex justify-content-between">
                <input type="submit" value="Gravar" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
