@page
@model IFL.WebApp.Areas.Admin.Pages.General.Eventos.CreateModel

@{
    ViewData["Title"] = "Inserir";
}

<breadcrumb items="Cadastros, Gerais, Eventos, Inserir"></breadcrumb>

<div class="row">
    <div class="col-md-10">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Evento.Nome" class="control-label"></label>
                        <input asp-for="Evento.Nome" class="form-control" />
                        <span asp-validation-for="Evento.Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Evento.Data" class="control-label"></label>
                        <input asp-for="Evento.Data" type="date" class="form-control" />
                        <span asp-validation-for="Evento.Data" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <span class="text-danger">*</span>
                        <label asp-for="Evento.TipoEvento" class="control-label"></label>
                        <select asp-for="Evento.TipoEvento"
                                class="form-select"
                                asp-items="Html.GetEnumSelectList<IFL.WebApp.Model.TipoEvento>()">
                        </select>
                        <span asp-validation-for="Evento.TipoEvento" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Evento.Local" class="control-label"></label>
                        <input asp-for="Evento.Local" class="form-control" />
                        <span asp-validation-for="Evento.Local" class="text-danger"></span>
                    </div>
                </div>
            </div>



            <div class="col-md-9">
                <div class="form-group">
                    <label asp-for="Evento.Descricao" class="control-label"></label>
                    <textarea asp-for="Evento.Descricao"
                              class="form-control"
                              rows="4"></textarea>
                    <span asp-validation-for="Evento.Descricao" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group form-check">
                    <input asp-for="Evento.Encerrado" class="form-check-input"   />
                    <label asp-for="Evento.Encerrado" class="form-check-label"></label>
                    <span asp-validation-for="Evento.Encerrado" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-3 d-flex justify-content-between">
                <input type="submit" value="Gravar" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
