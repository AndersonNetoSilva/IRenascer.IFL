    <script type="text/javascript">
          


         function drawLineDecimalChart() {

            var chartData = @Html.Raw(Json.Serialize(Model.PesoDTOList));

            var labels  = chartData.map(x => x.label);
            var valores = chartData.map(x => x.valor);

            new Chart(document.getElementById('line-decimal-chart'), {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Data',
                        data: valores,
                        borderColor: '#00B0FF',
                        backgroundColor: 'rgba(0,176,255,0.25)',
                        tension: 0.3,
                        fill: true,
                        pointRadius: 5
                    }]
                },
                options: {
                    plugins: {
                        title: {
                            display: true,
                            text: 'Ultimas pesagens - Competição',
                            font: {
                                size: 18,
                                weight: 'bold'
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,

                            // garante que o eixo trabalha com números decimais
                            ticks: {
                                callback: function (value) {
                                    // formata com 2 casas decimais
                                    return Number(value).toFixed(2);
                                }
                            }
                        }
                    }
                }
            });
        }

        function timeSpanToSeconds(timeSpan) {

                if (!timeSpan)
                    return 0;

                // ex: 01:12:35
                var parts = timeSpan.split(':');

                var h = parseInt(parts[0]);
                var m = parseInt(parts[1]);
                var s = parseFloat(parts[2].replace(',', '.'));

                return (h * 60 + m + s) / 60;
            }


        $(document).ready(function () {
                               
                                drawLineDecimalChart();
                                })
    </script>
}

