            width: 25% !important;
            float: left;
        }

        .col-print-9 {
            width: 75% !important;
            float: left;
        }

        .col-print-4 {
            width: 33.33% !important;
            float: left;
        }

        .row {
            display: flex !important;
            flex-wrap: wrap !important;
        }
        /* Força a cor dos gráficos e fundos */
        * {
            -webkit-print-color-adjust: exact !important;
            print-color-adjust: exact !important;
        }
    }
