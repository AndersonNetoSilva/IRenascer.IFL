@section Scripts
{
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/chart.js"></script>

    <script type="text/javascript">


        function drawSexoDonutsChart()
        {
            var chartData = @Html.Raw(Json.Serialize(Model.LutasDonutsModeList))

            // soma total
            var total = chartData.reduce(function (acc, item) {
                return acc + item.value;
            }, 0);

            Morris.Donut({
                element: 'chart-SexoDonuts',
                data: chartData,
                formatter: function (y) {

                    if (total === 0)
                        return '0%';

                    var percentual = (y / total) * 100;
                    return percentual.toFixed(1).replace('.', ',') + '%';
                },
                colors: [
                    '#3498DB', // azul
                    '#E74C3C'  // vermelho
                ]
            });
        };

         function drawPontuacaoChart() {
                var chartData = @Html.Raw(Json.Serialize(Model.PontucaoDTOList))

                     Morris.Bar({
                            element: 'chart-PontuacaoDTO',
                            data: chartData,
                            xkey: 'label',
                            ykeys: ['quantidade'],
                            labels: ['Qtd'],
                            hideHover: 'auto',
                            xLabelAngle: 0,

                            barColors: function (row, series, type) {

                                var colors = [
                                    '#2ECC71',
                                    '#3498DB',
                                    '#9B59B6',
                                    '#F1C40F',
                                    '#E67E22',
                                    '#E74C3C',
                                    '#1ABC9C'
                                ];

                                return colors[row.x % colors.length];
                            }
                        });
         };

         function drawHorizontalBarAgrupadoChart() {

            var chartData = @Html.Raw(Json.Serialize(Model.PontuacaoxLutaDTOList));

            var labels  = chartData.map(x => x.luta);
            var valuesY = chartData.map(x => x.yuko);
            var valuesS = chartData.map(x => x.shido);
            var valuesW = chartData.map(x => x.wazari);
            var valuesI = chartData.map(x => x.ippon);

            new Chart(document.getElementById("bar-chart-grouped"), {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: "Yuko",
                            backgroundColor: "#00B0FF", // azul vivo
                            data: valuesY
                        },
                        {
                            label: "Shido",
                            backgroundColor: "#FF5252", // vermelho vivo
                            data: valuesS
                        },
                        {
                            label: "Wazari",
                            backgroundColor: "#FFC107", // amarelo forte
                            data: valuesW
                        },
                        {
                            label: "Ipon",
                            backgroundColor: "#00E676", // verde vivo
                            data: valuesI
                        }
                        ]
                },
                options: {
                    indexAxis: 'x',   // <-- deixa o gráfico horizontal

                    plugins: {
                        title: {
                            display: true,
                            text: 'Lutas x Pontuação',
                            font: {
                                size: 20   // <-- tamanho da fonte
                            }
                        }
                    }
                }
            });
        };


         function drawLineDecimalChart() {

            var chartData = @Html.Raw(Json.Serialize(Model.TempoxLutaDTOList));

            var labels  = chartData.map(x => x.label);
            var valores = chartData.map(x => timeSpanToSeconds(x.tempo));

            new Chart(document.getElementById('line-decimal-chart'), {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Minutos',
                        data: valores,
                        borderColor: '#00B0FF',
                        backgroundColor: 'rgba(0,176,255,0.25)',
                        tension: 0.3,
                        fill: true,
                        pointRadius: 5
                    }]
                },
                options: {
                    plugins: {
                        title: {
                            display: true,
                            text: 'Tempo x Luta',
                            font: {
                                size: 18,
                                weight: 'bold'
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,

                            // garante que o eixo trabalha com números decimais
                            ticks: {
                                callback: function (value) {
                                    // formata com 2 casas decimais
                                    return Number(value).toFixed(2);
                                }
                            }
                        }
                    }
                }
            });
        }

        function timeSpanToSeconds(timeSpan) {

                if (!timeSpan)
                    return 0;

                // ex: 01:12:35
                var parts = timeSpan.split(':');

                var h = parseInt(parts[0]);
                var m = parseInt(parts[1]);
                var s = parseFloat(parts[2].replace(',', '.'));

                return (h * 60 + m + s) / 60;
            }

        function drawLineChart() {

            var chartData = @Html.Raw(Json.Serialize(Model.TempoxLutaDTOList));            

            var labels  = chartData.map(x => x.label);
            var valuesY = chartData.map(x => timeSpanToSeconds(x.tempo));


            console.log(chartData);
            console.log(labels);
            console.log(valuesY);

            new Chart(document.getElementById('line-chart'), {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Pontuação',
                        data: valuesY,
                        borderColor: '#00B0FF',
                        backgroundColor: 'rgba(0,176,255,0.2)',
                        tension: 0.3,       // deixa a linha suavizada
                        fill: true,
                        pointRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Tempo x Luta',
                            font: {
                                size: 20,       // <-- exatamente o modelo que você pediu
                                weight: 'bold'
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        };

        $(document).ready(function () {
                                drawSexoDonutsChart();
                                drawPontuacaoChart();
                                drawHorizontalBarAgrupadoChart();
                                drawLineDecimalChart();
                                })
    </script>
}

<style>
    /* Configurações de Página e Base */
    @@page {
        size: A4;
        margin: 1cm;
    }

    body {
        background-color: #f8f9fa;
        font-family: 'Roboto', sans-serif;
        font-size: 14px; /* Base relativa */
    }

    /* Card do Atleta */
    .athlete-card {
        background: white;
        border-radius: 0.75rem;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        border: 1px solid #e0e0e0;
    }

    /* Foto Adaptável */
    .photo-container {
        width: 100%;
        max-width: 12rem; /* Tamanho máximo relativo */
        aspect-ratio: 1/1;
        background-color: #e9ecef;
        border: 2px solid #dee2e6;
        border-radius: 1rem;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .photo-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    /* Tipografia de Informação */
    .info-label {
        font-weight: bold;
        color: #6c757d;
        font-size: 0.75rem;
        text-transform: uppercase;
        margin-bottom: 0.1rem;
    }

    .info-value {
        font-size: 0.9rem;
        color: #212529;
        margin-bottom: 0.75rem;
        word-break: break-word;
    }

    .chart-container {
        background: white;
        border-radius: 0.75rem;
        padding: 1.5rem;
        border: 1px solid #e0e0e0;
    }

    /* Ajustes Específicos para Impressão */
    @@media print {
        body {
            background-color: white !important;
            -webkit-print-color-adjust: exact;
        }

        .btn, .natural-filter, breadcrumb, pager {
            display: none !important;
        }

        #print-area,
        #print-area * {
            visibility: visible;
        }

        #print-area {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }

        .athlete-card, .chart-container {
            box-shadow: none !important;
            border: 1px solid #eee !important;
        }
        /* Garante que o Grid do Bootstrap não quebre na impressão */
        .col-print-3 {
            width: 25% !important;
            float: left;
        }

        .col-print-9 {
            width: 75% !important;
            float: left;
        }

        .col-print-4 {
            width: 33.33% !important;
            float: left;
        }

        .row {
            display: flex !important;
            flex-wrap: wrap !important;
        }
        /* Força a cor dos gráficos e fundos */
        * {
            -webkit-print-color-adjust: exact !important;
            print-color-adjust: exact !important;
        }
    }
</style>

