@page
@model IFL.WebApp.Areas.Admin.Pages.General.PrecosDeVenda.DetailsModel

@{
    ViewData["Title"] = "Consultar";
}

<breadcrumb items="Cadastros, Gerais, Preços de Venda, Consultar"></breadcrumb>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoDeVenda.Livro.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecoDeVenda.Livro.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoDeVenda.Valor)
        </dt>
        <dd class="col-sm-10">
            @Model.PrecoDeVenda.Valor.ToString("C", new System.Globalization.CultureInfo("pt-BR"))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoDeVenda.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecoDeVenda.Tipo)
        </dd>
    </dl>
</div>

<div class="form-group mt-3 d-flex justify-content-between">
    <a asp-page="./Edit" asp-route-id="@Model.PrecoDeVenda.Id" class="btn btn-primary">Alterar</a>
    <a asp-page="./Index" class="btn btn-secondary">Voltar</a>
</div>
